<UserControl x:Class="CaricatureBasics.UC_Swan1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaricatureBasics"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
        <Border BorderThickness="3" Grid.Row=" 0" Margin="10" BorderBrush="Gold"  CornerRadius="5" Background="AliceBlue"  >
            <Canvas x:Name="MyCanvas"  Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="1280" Height="600"></Canvas>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Name="btnFixedDraw" Margin="1" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Content="Draw1" Width="80" Click="btnFixedDraw_Click" VerticalAlignment="Top"></Button>
        </StackPanel>



    </Grid>
</UserControl>
